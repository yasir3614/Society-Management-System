
<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div style="width:30%; margin:0 auto;">
        <h1 style="text-align:center">Edit Comment</h1>
        <form action="/campgrounds/<%= campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" name = 'comment[text]' type='text' value="<%=comment.text%>"</input>
            </div>
            
            <div class="form-group">
                <button class="btn btn-large btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/">Go Back</a>
        </div>
       
    </div>
</div>
<% include ../partials/footer %>