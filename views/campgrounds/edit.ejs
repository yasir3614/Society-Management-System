

<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div style="width:30%; margin:0 auto;">
        <h1 style="text-align:center">Edit <%=campground.name%></h1>
        <form action="/campgrounds/<%= campground._id%>/?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" name = "campground[name]" type='text' value='<%=campground.name%>'></input>
            </div>
            <div class="form-group">
               <input class="form-control" name = "campground[image]" type='text' value='<%=campground.image%>'></input>
            </div>
            <div class="form-group">
               <input class="form-control" name = "campground[description]" type='text' value='<%=campground.description%>'></input>
            </div>
            <div class="form-group">
                <button class="btn btn-large btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/">Go Back</a>
        </div>
       
    </div>
</div>
<% include ../partials/footer %>