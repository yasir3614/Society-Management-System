<% include partials/header %>

<!------ Include the above in your HEAD tag ---------->

<!--
    you can substitue the span of reauth email for a input with the email and
    include the remember me checkbox
    -->
    <div class="container">
        <div class="card card-container">
            <!-- <img class="profile-img-card" src="//lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg?sz=120" alt="" /> -->
            <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
            <p id="profile-name" class="profile-name-card"></p>
            
            <form  action="/register" method="POST" class="form-signin">
                <span id="reauth-email" class="reauth-email"></span>
				
				
                <input type="text" name="username" class="inputEmail form-control"  placeholder="Username" required autofocus>
                <input type="password" name="password" class="inputEmail form-control"  placeholder="Password" required>
                <input type="text" name="firstname" class="inputEmail form-control"  placeholder="First Name" required autofocus>
				<input type="text" name="lastname" class="inputEmail form-control"  placeholder="Last Name" required autofocus>
				<input type="date" name="dob" class="inputEmail form-control"  required autofocus>
				<input type="text" name="studentnumber" class="inputEmail form-control" placeholder="Student Number" required autofocus>
				<input type="text" name="facultynumber" class="inputEmail form-control"  placeholder="Faculty Number" required autofocus>
				<input type="text" name="batch" class="inputEmail form-control"  placeholder="Batch" required autofocus>
				<input type="text" name="department" class="inputEmail form-control"   placeholder="Department" required autofocus>
				<input type="text" name="phonenumber" class="inputEmail form-control" placeholder="Phone Number" required autofocus>
				<input type="text" name="photo" class="inputEmail form-control"  placeholder="Profile Image Url" required autofocus>
				<div id="remember" class="checkbox">
                    
                </div>
                <button class="btn btn-lg btn-primary btn-block btn-signin" >Sign Up</button>
                
            </form><!-- /form -->
            <!--<a href="/register"><button class="btn btn-lg btn-primary btn-block btn-signin">Sign Up</button></a>-->
        </div><!-- /card-container -->
    </div><!-- /container -->