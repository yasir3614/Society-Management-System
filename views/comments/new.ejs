
<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div style="width:30%; margin:0 auto;">
        <h1 style="text-align:center">Add New Comment To <%= campground.name%></h1>
        <form action="/campgrounds/<%= campground._id%>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" name = 'comment[text]' type='text' placeholder='insert comment here'></input>
            </div>
            
            <div class="form-group">
                <button class="btn btn-large btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/">Go Back</a>
        </div>
       
    </div>
</div>
<% include ../partials/footer %>